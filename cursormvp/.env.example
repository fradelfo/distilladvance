# =============================================================================
# DISTILL - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
DEBUG=distill:*
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Web Application
# -----------------------------------------------------------------------------
WEB_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
API_URL=http://localhost:3001
API_PORT=3001
API_SECRET=your-api-secret-change-in-production

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/distill_dev
DATABASE_SSL=false

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
# OpenAI Configuration (fallback provider)
OPENAI_API_KEY=sk-your-openai-key
OPENAI_ORG_ID=org-your-org-id
OPENAI_MODEL_DEFAULT=gpt-4-turbo-preview

# Anthropic Configuration (primary provider for distillation)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL_DEFAULT=claude-sonnet-4-20250514

# AI Service Preferences
AI_PROVIDER_PRIMARY=anthropic
AI_PROVIDER_FALLBACK=openai
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# Rate Limiting for AI Operations
RATE_LIMIT_DISTILL_PER_MINUTE=10
RATE_LIMIT_DISTILL_PER_DAY=100

# Vector Database (ChromaDB or Pinecone)
VECTOR_DB_PROVIDER=chroma
CHROMA_URL=http://localhost:8000
# PINECONE_API_KEY=your-pinecone-key
# PINECONE_ENVIRONMENT=your-environment

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# OAuth Providers (optional)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Browser Extension
# -----------------------------------------------------------------------------
CHROME_EXTENSION_ID=your-extension-id
FIREFOX_ADDON_ID=your-addon-id
EXTENSION_PUBLIC_KEY=your-extension-public-key

# Chrome Web Store (for deployment)
# CHROME_WEBSTORE_CLIENT_ID=your-client-id
# CHROME_WEBSTORE_CLIENT_SECRET=your-client-secret
# CHROME_WEBSTORE_REFRESH_TOKEN=your-refresh-token

# Firefox Add-ons (for deployment)
# FIREFOX_ADDONS_JWT_ISSUER=your-jwt-issuer
# FIREFOX_ADDONS_JWT_SECRET=your-jwt-secret

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# PostHog (optional)
# POSTHOG_API_KEY=your-posthog-key
# POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_AI_CHAT_ANALYSIS=true
FEATURE_VECTOR_SEARCH=true
FEATURE_EXPORT_PROMPTS=true
FEATURE_TEAM_COLLABORATION=false
