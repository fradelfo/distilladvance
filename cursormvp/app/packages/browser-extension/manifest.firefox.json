{
  "manifest_version": 3,
  "name": "Distill - AI Chat Conversation Distillation",
  "version": "0.1.0",
  "description": "Distill AI chat conversations into reusable, optimized prompts",
  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg",
      "48": "icons/icon-48.svg"
    },
    "default_title": "Distill AI Conversations"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background/service-worker.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*"
      ],
      "js": ["content/main.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "capture-conversation": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Capture and distill the current conversation"
    }
  },
  "permissions": ["storage", "activeTab", "contextMenus", "cookies"],
  "optional_permissions": ["clipboardWrite"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "http://localhost:3002/*",
    "http://localhost:3001/*",
    "https://app.distill.ai/*",
    "https://api.distill.ai/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "distill@distill.ai",
      "strict_min_version": "121.0"
    }
  }
}
