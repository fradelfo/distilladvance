{
  "name": "@distill/browser-extension",
  "version": "0.1.0",
  "private": true,
  "description": "Browser extension for AI chat conversation distillation",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "preview": "web-ext run --source-dir dist",
    "preview:chrome": "web-ext run --source-dir dist --target chromium",
    "preview:firefox": "web-ext run --source-dir dist --target firefox-desktop",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "web-ext lint --source-dir dist",
    "package": "web-ext build --source-dir dist --overwrite-dest",
    "package:chrome": "bun run build:chrome && bun run package",
    "package:firefox": "bun run build:firefox && bun run package",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@distill/shared-types": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.25",
    "@types/chrome": "^0.0.270",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.0"
  }
}
