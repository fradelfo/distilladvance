{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["chrome", "bun"],
    "baseUrl": ".",
    "paths": {
      "@distill/shared-types": ["app/packages/shared-types/src/index.ts"],
      "@distill/shared/*": ["app/packages/shared-types/src/*"],
      "@distill/extension/*": ["app/packages/browser-extension/src/*"],
      "@distill/web/*": ["app/packages/web-app/src/*"],
      "@distill/api/*": ["app/packages/api/src/*"]
    }
  },
  "include": ["app/**/*.ts", "app/**/*.tsx", "tests/**/*.ts"],
  "exclude": ["node_modules", "**/dist/**", "**/*.test.ts"]
}
