  "governance_framework": {
    "access_control": {
      "inheritance_model": "hierarchical_with_overrides",
      "permission_escalation": "explicit_approval_required",
      "cross_unit_collaboration": "controlled_sharing",
      "external_access": "prohibited_by_default"
    },

    "budget_management": {
      "allocation_method": "top_down_with_local_input",
      "budget_tracking": "real_time",
      "cost_allocation": "usage_based_chargeback",
      "overage_handling": "automatic_alerts_with_approval_workflow"
    },

    "compliance_enforcement": {
      "policy_inheritance": "cascade_with_strengthening",
      "audit_scope": "comprehensive",
      "violation_handling": "escalation_based",
      "remediation_tracking": "mandatory"
    },

    "data_governance": {
      "classification_enforcement": "automatic",
      "cross_border_restrictions": "strict",
      "retention_policies": "organization_wide",
      "privacy_controls": "gdpr_plus_local_requirements"
    }
  },

