      {
        "level": 2,
        "name": "business_unit",
        "description": "Major business divisions",
        "max_entities": 20,
        "governance": "executive_management"
      },
      {
        "level": 3,
        "name": "division",
        "description": "Operational divisions within business units",
        "max_entities": 100,
        "governance": "divisional_leadership"
      },
      {
        "level": 4,
        "name": "department",
        "description": "Functional departments",
        "max_entities": 500,
        "governance": "department_management"
      },
      {
        "level": 5,
        "name": "team",
        "description": "Working teams and squads",
        "max_entities": 2000,
        "governance": "team_leadership"
      },
      {
        "level": 6,
        "name": "project",
        "description": "Specific projects and initiatives",
        "max_entities": 10000,
        "governance": "project_management"
      }
    ]
  },

